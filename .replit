modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["libGL", "libGLU", "xorg.libX11", "xorg.libXext", "fontconfig", "freetype", "libxkbcommon", "wayland", "xorg.libXrandr", "xorg.libXi", "xorg.libXfixes", "xorg.libXcursor", "xorg.libXdamage", "xorg.libXcomposite", "xorg.libXtst", "xorg.libXScrnSaver", "glib", "dbus"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Headless"

[[workflows.workflow]]
name = "Test Headless"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --headless"

[workflows.workflow.metadata]
outputType = "console"
